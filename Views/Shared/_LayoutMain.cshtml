    <script>
        $(document).ready(function () {
            // Scroll Back Top
            $(window).scroll(function () {
                if ($(this).scrollTop() > 90) {
                    $('#back-to-top').fadeIn();
                } else {
                    $('#back-to-top').fadeOut();
                }
            });
            // scroll body to 0px on click
            $('#back-to-top').click(function () {
                $('body,html').animate({
                    scrollTop: 0
                }, 1000);
                return false;
            });

            $(".demo1").bootstrapNews({

                onStop: null,
                onPause: null,
                onReset: null,
                onPrev: null,
                onNext: null,
                onToDo: null

            });
        });

        function OpenPopup(announcement_id)
        {
            let Obj = {
                id: announcement_id,
            };

            let url = '@Url.Action("LoadModalAnnouncement", "home")';

                $.ajax({
                url: url,
                data: JSON.stringify(Obj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: 'html',
                success: function (result) {
                    $('#divcontent').empty();
                    $('#divcontent').html(result);
                    $('#DetailsPengumumanPopup').modal({
                        show: true,
                        backdrop: 'static',
                        keyboard: false
                    });
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
                });

        }

