                    <a class="nav-link @(Model.ActiveTabIndex == 0 ? "active" : "")" id="lesen-tab" data-toggle="tab" href="#lesen" role="tab" aria-controls="lesen" aria-selected="true">@Resources.Verification.VV_HolderLicense_Permit_SP</a>
