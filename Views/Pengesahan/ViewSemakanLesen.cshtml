                <li class="nav-item">
                    <a class="nav-link @(Model.ActiveTabIndex == 2 ? "active" : "")" id="status-tab" data-toggle="tab" href="#status" role="tab" aria-controls="status" aria-selected="false">@Resources.License.LES_Status</a>
