                <li class="nav-item">
                    <a class="nav-link" id="hidupanLiar-tab" data-toggle="tab" href="#hidupanLiar" role="tab" aria-controls="hidupanLiar" aria-selected="false">@Resources.Verification.VV_List_Wildlife</a>
